<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xale="http://schemas.axdelafuen.com/2025/maui/xaletoolkit"
             xmlns:local="clr-namespace:Maui.XaleToolkit.Samples.Samples.ComboBox"
             x:Class="Maui.XaleToolkit.Samples.Samples.ComboBox.ComboBoxSamplePage"
             x:DataType="local:ComboBoxSamplePage"
             Title="ComboBoxSamplePage">
    <VerticalStackLayout>
        <xale:ComboBox
            Placeholder="Select item..."
            SelectedItem="{Binding SelectedItem}"
            ItemsSource="{Binding ItemsSource}"/>
        
        <HorizontalStackLayout>
            <Label Text="Selected:" Margin="3"/>
            <Label Text="{Binding SelectedItem, TargetNullValue='null'}" Margin="3"/>
        </HorizontalStackLayout>

        <Button Text="Unselect" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
